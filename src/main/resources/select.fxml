<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.SelectController"> <!-- 修改控制器 -->

    <children>
        <!-- 背景和文本保持不变... -->
        <ImageView fitHeight="219.0" fitWidth="646.0" layoutX="77.0" layoutY="393.0"
                   pickOnBounds="true" preserveRatio="true" style="-fx-blend-mode: transparent;">
            <image>
                <Image url="@images/dialog.jpg" />
            </image>
        </ImageView>
        <Label layoutX="170.0" layoutY="402.0" prefHeight="54.0" prefWidth="88.0"
               text="你" textAlignment="CENTER">
            <font>
                <Font name="Bodoni MT Bold" size="32.0" />
            </font>
        </Label>
        <Label layoutX="115.0" layoutY="471.0" prefHeight="54.0" prefWidth="586.0"
               text="……居然是宝可梦？停停停，这是要我选吗？" textAlignment="CENTER">
            <font>
                <Font name="Bodoni MT Bold" size="24.0" />
            </font>
        </Label>
        <Label layoutX="267.0" layoutY="69.0" prefHeight="54.0" prefWidth="283.0"
               text="选择你的宝可梦！" textAlignment="CENTER">
            <font>
                <Font name="Bodoni MT Bold" size="32.0" />
            </font>
        </Label>

        <!-- 修改按钮，添加onAction事件 -->
        <Button layoutX="123.0" layoutY="349.0" mnemonicParsing="false"
                text="选择" onAction="#selectBulbasaur" />
        <Button layoutX="350.0" layoutY="349.0" mnemonicParsing="false"
                text="选择" onAction="#selectCharmander" />
        <Button layoutX="586.0" layoutY="349.0" mnemonicParsing="false"
                text="选择" onAction="#selectPikachu" />

        <!-- 图片保持不变... -->
        <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="77.0" layoutY="180.0"
                   pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/妙蛙种子.png" />
            </image>
        </ImageView>
        <ImageView fitHeight="169.0" fitWidth="163.0" layoutX="309.0" layoutY="170.0"
                   pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/小火龙.png" />
            </image>
        </ImageView>
        <ImageView fitHeight="205.0" fitWidth="167.0" layoutX="545.0" layoutY="134.0"
                   pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/皮卡丘.png" />
            </image>
        </ImageView>
    </children>
</AnchorPane>
