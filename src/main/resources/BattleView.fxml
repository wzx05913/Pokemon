<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="battle.BattleController">
    
    <!-- 顶部：玩家信息 -->
    <top>
        <VBox style="-fx-background-color: #e6f7ff; -fx-padding: 10;">
            <Label fx:id="playerPokemonName">
                <font>
                    <Font name="Arial" size="20" />
                </font>
            </Label>
            <Label fx:id="playerPokemonStats">
                <font>
                    <Font name="Arial" size="14" />
                </font>
            </Label>
        </VBox>
    </top>
    
    <!-- 底部：敌人信息 -->
    <bottom>
        <VBox style="-fx-background-color: #ffe6e6; -fx-padding: 10;">
            <Label fx:id="enemyPokemonName">
                <font>
                    <Font name="Arial" size="20" />
                </font>
            </Label>
            <Label fx:id="enemyPokemonStats">
                <font>
                    <Font name="Arial" size="14" />
                </font>
            </Label>
        </VBox>
    </bottom>
    
    <!-- 中间：战斗日志 -->
    <center>
        <VBox style="-fx-padding: 10;">
            <Label text="战斗日志">
                <font>
                    <Font name="Arial" size="16" />
                </font>
            </Label>
            <TextArea fx:id="battleLog" editable="false" prefHeight="460.0" prefWidth="460.0" />
            <Label fx:id="battleResultLabel" style="-fx-text-fill: #ff0000;">
                <font>
                    <Font name="Arial" size="16" />
                </font>
            </Label>
        </VBox>
    </center>
    
    <!-- 右侧：技能按钮 -->
    <right>
        <VBox fx:id="movesContainer" prefWidth="200" style="-fx-padding: 10; -fx-spacing: 10;">
            <Label text="选择技能">
                <font>
                    <Font name="Arial" size="16" />
                </font>
            </Label>
            <!-- 技能按钮会动态添加 -->
        </VBox>
    </right>
    
    <!-- 左侧：退出按钮 -->
    <left>
        <VBox style="-fx-padding: 10;">
            <Button onAction="#onExit" prefWidth="100" text="退出战斗" />
        </VBox>
    </left>
</BorderPane>
