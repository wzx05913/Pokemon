<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BattleController">
    
    <!-- 顶部：玩家信息 -->
    <top>
        <VBox alignment="TOP_RIGHT" style="-fx-background-color: #e6f7ff; -fx-padding: 10;">
            <Label fx:id="playerPokemonName">
                <font>
                    <Font name="Arial" size="20" />
                </font>
            </Label>
            <Label fx:id="playerPokemonStats">
                <font>
                    <Font name="Arial" size="14" />
                </font>
            </Label>
        </VBox>
    </top>
    
    <!-- 底部：敌人信息 -->
    <bottom>
        <VBox style="-fx-background-color: #ffe6e6; -fx-padding: 10;">
            <Label fx:id="enemyPokemonName">
                <font>
                    <Font name="Arial" size="20" />
                </font>
            </Label>
            <Label fx:id="enemyPokemonStats">
                <font>
                    <Font name="Arial" size="14" />
                </font>
            </Label>
        </VBox>
    </bottom>
    
    <!-- 中间：战斗日志 -->
    <center>
        <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="458.0" style="-fx-padding: 10;">
            <Label text="战况">
                <font>
                    <Font name="Arial" size="16" />
                </font>
            </Label>
            <TextArea fx:id="battleLog" editable="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="402.0" prefWidth="444.0" />
            <Label fx:id="battleResultLabel" style="-fx-text-fill: #ff0000;">
                <font>
                    <Font name="Arial" size="16" />
                </font>
            </Label>
        </VBox>
    </center>
    
    <!-- 右侧：技能按钮 -->
    <right>
      <VBox prefHeight="480.0" prefWidth="174.0">
         <children>
            <ImageView fitHeight="292.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
               <Label minHeight="-Infinity" minWidth="-Infinity" text="选择技能">
                   <font>
                       <Font name="Arial" size="16" />
                   </font>
               </Label>
         </children>
      </VBox>
    </right>
    
    <!-- 左侧：退出按钮 -->
    <left>
      <VBox prefHeight="480.0" prefWidth="178.0">
         <children>
               <Button onAction="#onExit" prefWidth="100" text="退出战斗" />
            <ImageView fitHeight="287.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </VBox>
    </left>
</BorderPane>
