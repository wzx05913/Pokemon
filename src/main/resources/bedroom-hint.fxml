<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BedroomHintController">
    <children>
        <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/room1.png" />
            </image>
        </ImageView>

        <!-- 宠物按钮 - 使用像素风格 -->
        <Button layoutX="615.0" layoutY="458.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="78.0" style="-fx-background-color: #6b4fbb; -fx-border-color: #000000; -fx-border-width: 3px; -fx-text-fill: #ffffff; -fx-font-family: 'Courier New'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand;" text="宠物">
            <font>
                <Font name="Ark Pixel" size="12.0" />
            </font>
        </Button>

        <!-- 休息按钮 - 使用复古风格 -->
        <Button layoutX="183.0" layoutY="417.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #2d2d2d; -fx-border-color: #000000; -fx-border-width: 4px; -fx-border-style: segments(2, 2); -fx-text-fill: #ffffff; -fx-font-family: 'Courier New'; -fx-font-size: 12px; -fx-cursor: hand;" text="休息（存档）" textFill="#695050" textOverrun="LEADING_WORD_ELLIPSIS">
