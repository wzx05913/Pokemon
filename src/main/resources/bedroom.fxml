<?import javafx.scene.text.Font?>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- 关键：加 fx:controller，让控制器能拿到这些控件 -->
<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="444.0" prefWidth="685.0" style="-fx-background-color: transparent;"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.PetManageController">
    <children>
        <ImageView fitHeight="454.0" fitWidth="673.0" layoutX="5.0" layoutY="8.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/pets.png" />
            </image>
        </ImageView>

        <!-- 关键：给 ScrollPane 加内容 VBox，并加 fx:id=petListBox，供控制器填充 -->
        <ScrollPane fx:id="petScrollPane" layoutX="63.0" layoutY="62.0" prefHeight="308.0" prefWidth="178.0" fitToWidth="true" fitToHeight="true">
            <content>
                <VBox fx:id="petListBox" spacing="6.0"/>
            </content>
        </ScrollPane>

        <!-- 右上角宠物图片：加 fx:id，用于显示选中宠物的形象（可选） -->
        <ImageView fx:id="petImageView" fitHeight="189.0" fitWidth="165.0" layoutX="281.0" layoutY="62.0" pickOnBounds="true" preserveRatio="true" />

        <!-- 右侧信息：给“值”标签加 fx:id，控制器才能更新文字 -->
        <AnchorPane layoutX="446.0" layoutY="71.0" prefHeight="168.0" prefWidth="164.0">
            <children>
                <Label prefHeight="25.0" prefWidth="49.0" text="名字：" textAlignment="CENTER">
                    <font><Font name="Bodoni MT Black" size="12.0" /></font>
                </Label>
                <Label fx:id="nameLabel" layoutX="49.0" prefHeight="25.0" prefWidth="115.0" text="（显示宠物名）">
                    <font><Font name="Bodoni MT Black" size="12.0" /></font>
                </Label>

                <Label layoutY="25.0" prefHeight="25.0" prefWidth="49.0" text="id：" textAlignment="CENTER">
                    <font><Font name="Arial" size="12.0" /></font>
                </Label>
                <Label fx:id="idLabel" layoutX="49.0" layoutY="25.0" prefHeight="25.0" prefWidth="86.0" text="（显示宠物id）" textAlignment="CENTER">
                    <font><Font name="Arial" size="12.0" /></font>
                </Label>

                <Label layoutY="50.0" prefHeight="25.0" prefWidth="49.0" text="清洁度：" textAlignment="CENTER">
                    <font><Font name="Arial" size="12.0" /></font>
                </Label>
                <Label fx:id="cleanLabel" layoutX="49.0" layoutY="50.0" prefHeight="25.0" prefWidth="86.0" text="（显示清洁度）" textAlignment="CENTER">
                    <font><Font name="Arial" size="12.0" /></font>
                </Label>

                <Label layoutY="75.0" prefHeight="25.0" prefWidth="86.0" text="等级：" textAlignment="CENTER">
                    <font><Font name="Arial" size="12.0" /></font>
                </Label>
                <Label fx:id="levelLabel" layoutX="49.0" layoutY="75.0" prefHeight="25.0" prefWidth="86.0" text="（显示等级）" textAlignment="CENTER">
                    <font><Font name="Arial" size="12.0" /></font>
                </Label>

                <Label layoutY="101.0" prefHeight="25.0" prefWidth="86.0" text="经验：" textAlignment="CENTER">
                    <font><Font name="Arial" size="12.0" /></font>
                </Label>
                <Label fx:id="expLabel" layoutX="50.0" layoutY="101.0" prefHeight="26.0" prefWidth="106.0" text="（当前经验/升级经验）" textAlignment="CENTER">
                    <font><Font name="Bell MT" size="12.0" /></font>
                </Label>
            </children>
        </AnchorPane>

        <!-- 道具区：为三个“使用”按钮加 onAction，分别调用蛋/肥皂/米饭 -->
        <Pane layoutX="281.0" layoutY="256.0" prefHeight="114.0" prefWidth="334.0">
            <children>
                <ImageView fitHeight="56.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image><Image url="@images/Egg.png" /></image>
                </ImageView>
                <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="146.0" pickOnBounds="true" preserveRatio="true">
                    <image><Image url="@images/soap.png" /></image>
                </ImageView>
                <ImageView fitHeight="50.0" fitWidth="50.0" layoutY="64.0" pickOnBounds="true" preserveRatio="true">
                    <image><Image url="@images/rice.png" /></image>
                </ImageView>

                <!-- 持有数标签保持原样（如需接入 Bag 再加 fx:id） -->
                <Label layoutX="61.0" layoutY="7.0" text="持有数：" />
                <Label layoutX="109.0" layoutY="7.0" text="x" />
                <Label layoutX="210.0" layoutY="7.0" text="持有数：" />
                <Label layoutX="258.0" layoutY="7.0" text="x" />
                <Label layoutX="61.0" layoutY="74.0" text="持有数：" />
                <Label layoutX="109.0" layoutY="74.0" text="x" />

                <!-- 使用按钮：加 onAction -->
                <Button fx:id="eggButton" layoutX="61.0" layoutY="22.0" mnemonicParsing="false" text="使用" onAction="#onUseEgg"/>
                <Button fx:id="soapButton" layoutX="210.0" layoutY="22.0" mnemonicParsing="false" text="使用" onAction="#onUseSoap"/>
                <Button fx:id="riceButton" layoutX="61.0" layoutY="88.0" mnemonicParsing="false" text="使用" onAction="#onUseRice"/>
            </children>
        </Pane>
    </children>
</Pane>