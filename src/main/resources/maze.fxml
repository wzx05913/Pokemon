<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.MazeController"
            prefWidth="800.0" prefHeight="600.0"
            style="-fx-background-color: #f0f0f0;">

    <!-- 顶部：退出按钮 -->
    <top>
        <HBox spacing="8" style="-fx-padding:8;">
            <Button text="退出探索" onAction="#onExitExploration"/>
        </HBox>
    </top>

    <!-- 中间：画布（绘制迷宫） -->
    <center>
        <StackPane style="-fx-padding:10;">
            <Canvas fx:id="canvas" width="760.0" height="520.0" focusTraversable="true"/>
        </StackPane>
    </center>

    <!-- 右侧：图示（Legend） -->
    <right>
        <VBox spacing="10" style="-fx-padding:12;">
            <Label text="图示：">
                <font><Font size="14"/></font>
            </Label>

            <!-- 玩家（红点） -->
            <HBox spacing="8">
                <StackPane prefWidth="20" prefHeight="20">
                    <Label style="-fx-background-color: red; -fx-background-radius: 10; -fx-min-width:12; -fx-min-height:12;" />
                </StackPane>
                <Label text="你（玩家）"/>
            </HBox>

            <!-- 敌人（黄点） -->
            <HBox spacing="8">
                <StackPane prefWidth="20" prefHeight="20">
                    <Label style="-fx-background-color: yellow; -fx-background-radius: 10; -fx-min-width:12; -fx-min-height:12;" />
                </StackPane>
                <Label text="敌人（随机遇敌点）"/>
            </HBox>

            <!-- 终点 -->
            <HBox spacing="8">
                <StackPane prefWidth="20" prefHeight="20">
                    <Label style="-fx-background-color: green; -fx-background-radius: 3; -fx-min-width:12; -fx-min-height:12;" />
                </StackPane>
                <Label text="终点"/>
            </HBox>

            <!-- 说明提示 -->
            <Label wrapText="true" text="使用方向键移动。遇到黄点会触发战斗。到达终点返回卧室。"/>
        </VBox>
    </right>
</BorderPane>