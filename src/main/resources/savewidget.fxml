<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="415.0" prefWidth="425.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SaveLoadController">

    <!-- 背景图片 -->
    <ImageView fitHeight="414.0" fitWidth="439.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@images/savewidget.png" />
        </image>
    </ImageView>

    <!-- 内容面板 -->
    <VBox alignment="CENTER" spacing="15" style="-fx-background-color: transparent;">
        <padding>
            <Insets bottom="20" left="20" right="20" top="30" />
        </padding>

        <!-- 标题 -->
        <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 18px; -fx-font-weight: bold;" text="存档管理">
            <font>
                <Font name="Ark Pixel" size="16.0" />
            </font>
        </Label>

        <!-- 存档列表 -->
        <ListView fx:id="saveList" prefHeight="242.0" prefWidth="360.0" style="-fx-background-color: rgba(255, 255, 255, 0.3);                        -fx-control-inner-background: rgba(255, 255, 255, 0.3);                        -fx-border-color: rgba(52, 152, 219, 0.5);                        -fx-border-width: 2;                        -fx-border-radius: 5;">
            <orientation>HORIZONTAL</orientation>
        </ListView>

        <!-- 按钮区域 -->
        <HBox alignment="CENTER" spacing="10">
            <!-- 保存按钮 -->
            <Button fx:id="saveButton" onAction="#onSaveButtonClick" prefHeight="30" prefWidth="80" style="-fx-background-color: #27ae60;                         -fx-text-fill: white;                         -fx-background-radius: 5;                         -fx-border-color: #1e8449;                         -fx-border-width: 2;                         -fx-font-weight: bold;                         -fx-cursor: hand;" text="保存">
                <font>
                    <Font name="Ark Pixel" size="10.0" />
                </font>
            </Button>

            <!-- 读取按钮 -->
            <Button fx:id="loadButton" onAction="#onLoadButtonClick" prefHeight="30" prefWidth="80" style="-fx-background-color: #3498db;                         -fx-text-fill: white;                         -fx-background-radius: 5;                         -fx-border-color: #21618c;                         -fx-border-width: 2;                         -fx-font-weight: bold;                         -fx-cursor: hand;" text="读取">
                <font>
                    <Font name="Ark Pixel" size="10.0" />
                </font>
            </Button>

            <!-- 删除按钮 -->
            <Button fx:id="deleteButton" onAction="#onDeleteButtonClick" prefHeight="30" prefWidth="80" style="-fx-background-color: #e74c3c;                         -fx-text-fill: white;                         -fx-background-radius: 5;                         -fx-border-color: #b03a2e;                         -fx-border-width: 2;                         -fx-font-weight: bold;                         -fx-cursor: hand;" text="删除">
                <font>
                    <Font name="Ark Pixel" size="10.0" />
                </font>
            </Button>

            <!-- 关闭按钮 -->
            <Button fx:id="closeButton" onAction="#onCloseButtonClick" prefHeight="30" prefWidth="80" style="-fx-background-color: #95a5a6;                         -fx-text-fill: white;                         -fx-background-radius: 5;                         -fx-border-color: #7f8c8d;                         -fx-border-width: 2;                         -fx-font-weight: bold;                         -fx-cursor: hand;" text="关闭">
                <font>
                    <Font name="Ark Pixel" size="10.0" />
                </font>
            </Button>
        </HBox>

        <!-- 状态信息 -->
        <Label fx:id="statusLabel" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" text="选择存档位进行操作">
            <font>
                <Font name="Ark Pixel" size="10.0" />
            </font>
        </Label>
    </VBox>
</StackPane>
