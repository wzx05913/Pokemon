<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/room1.png" />
            </image>
        </ImageView>

        <!-- 宠物按钮 - 使用像素风格 -->
        <Button layoutX="615.0" layoutY="458.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="78.0" text="宠物"
                style="-fx-background-color: #6b4fbb; -fx-border-color: #000000; -fx-border-width: 3px; -fx-text-fill: #ffffff; -fx-font-family: 'Courier New'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand;">
            <font>
                <Font name="Ark Pixel" size="12.0" />
            </font>
        </Button>

        <!-- 休息按钮 - 使用复古风格 -->
        <Button layoutX="183.0" layoutY="417.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="休息（存档）" textFill="#695050" textOverrun="LEADING_WORD_ELLIPSIS"
                style="-fx-background-color: #2d2d2d; -fx-border-color: #000000; -fx-border-width: 4px; -fx-border-style: segments(2, 2); -fx-text-fill: #ffffff; -fx-font-family: 'Courier New'; -fx-font-size: 12px; -fx-cursor: hand;">
            <font>
                <Font name="Ark Pixel" size="12.0" />
            </font>
        </Button>

        <!-- 外出按钮 - 使用RPG风格 -->
        <Button layoutX="400.0" layoutY="365.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="78.0" text="外出"
                style="-fx-background-color: #4a90e2; -fx-border-color: #1a3a5f; -fx-border-width: 3px; -fx-text-fill: #f0f0f0; -fx-font-family: 'Courier New'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand;">
            <font>
                <Font name="Ark Pixel" size="12.0" />
            </font>
        </Button>

        <!-- 商店按钮 - 使用像素风格 -->
        <Button layoutX="681.0" layoutY="25.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="78.0" text="商店"
                style="-fx-background-color: #ff6b6b; -fx-border-color: #b33a3a; -fx-border-width: 3px; -fx-text-fill: #ffffff; -fx-font-family: 'Courier New'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand;">
            <font>
                <Font name="Ark Pixel" size="12.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
